<section class="container tender-wizard">
	<form class="main tndr-form">
		<article class="step-1">
			<h1>{{__ "Tender wizard"}}</h1>

			<fieldset>
				<legend>
					<h3>{{__ "Main data"}}</h3>
				</legend>
				<div>
					<label class="required">
						<span>{{__ "Name of tender"}}</span>
						<input type="text" name="name" class="input-lg" />
					</label>
				</div>

				<div>
					<label>
						<span>{{__ "Simpro Quote"}}</span>
						<input type="text" name="simpro_quote_number" />
					</label>
				</div>

				<div>
					<label>
						<span>{{__ "Description"}}</span>
						<textarea type="text" name="description" class="input-lg">
						</textarea>
					</label>
				</div>
			</fieldset>

			<fieldset>
				<legend>
					<h3>{{__ "Dates"}}</h3>
				</legend>
				<div>
					<label>
						<span>{{__ "Opening date"}}</span>
						<input class="datepicker-here" name="opening_date" type="datetime" data-position="right top" data-language="{{@root.lang.elang}}"/>
					</label>
				</div>
				<div>
					<label>
						<span>{{__ "Closing date"}}</span>
						<input class="datepicker-here" type="datetime" name="closing_date" data-position="right top" data-language="{{@root.lang.elang}}"/>
					</label>
				</div>
			</fieldset>

			<div class="buttons-block">
				<a href="/" class="btn btn-cancel">{{__ "Cancel"}}</a>
				<button type="button" class="btn btn-create cl-create">{{__ "Create"}}</a>
			</div>

		</article>
	</form>
</section>

{{#extend "scripts"}}

<script type="text/javascript" src="/js/tender/wizard.min.js">
</script>

{{/extend}}
