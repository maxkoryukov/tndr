<section class="container builder list">
	<h1>{{__ "Builders"}}</h1>

	<fieldset>
		{{! TODO : url }}
		<a class="btn btn-create" href="/builder/create">
			<span class="fa-stack">
				<i class="fa fa-building fa-stack-1x"></i>
				<i class="fa fa-plus fa-stack-1x fa-overlay"></i>
			</span>
			{{__ "Create new"}}
		</a>
	</fieldset>

	<section>
		<h2>{{__ "List, by categores"}}</h2>

		{{#each categories}}
			<article class="builder-category">
				<header class="{{code}}">
					<h3>{{name}}</h3>
				</header>
				<section class="panel-body">
					<p>{{tip_usage}}</p>
					<p>{{tip_price}}</p>
					<p>{{note}}</p>
				</section>
				<ul>
					{{#each builders}}
						<li>
							<a href="/builder/{{id}}" title="{{__ "View builder details"}}"><i class="fa fa-link"></i></a>
							{{name}}
						</li>
					{{/each}}
				</ul>
			</article>
		{{/each}}
	</section>

</section>
