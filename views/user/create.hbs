<section class="container">
	<h1>{{__ "New user"}}</h1>

	<form method="POST" class="col-md-6" action="/user/create">

		<fieldset>
			<legend>{{__ "Login data"}}</legend>

			<div class="form-group">
				<label>
					{{__ "Username"}}
					<input type="text" class="form-control" id="username" name="username" size="30" />
				</label>
			</div>

			<div class="form-group">
				<label>
					{{__ "New password"}}
					<input type="password" class="form-control" id="password" name="password" />
				</label>
			</div>

			<div class="form-group">
				<label>
					{{__ "Confirm new password"}}
					<input type="password" class="form-control" id="password2" name="password2" />
				</label>
			</div>
		</fieldset>
		<fieldset>
			<legend>{{__ "Personal data"}}</legend>

			<div class="form-group">
				<label>
					{{__ "Name"}}
					<input type="text" class="form-control" id="name" name="name" />
				</label>
			</div>

			<div class="form-group">
				<label>
					{{__ "Surname"}}
					<input type="text" class="form-control" id="surname" name="surname" />
				</label>
			</div>

			<div class="form-group">
				<label>
					{{__ "Phone"}}
					<input type="tel" class="form-control" id="phone" name="phone" />
				</label>
			</div>
		</fieldset>

		<div class="form-group">
			<a href="/user/list" class="btn btn-cancel" title="{{__ 'Cancel'}}">{{__ "Cancel"}}</a>
			<button type="submit" class="btn btn-primary" title="{{__ 'Create new user'}}">{{__ "Create"}}</a>
		</div>
	</form>
</section>
